<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_product_category_form" model="ir.ui.view">
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view" />
        <field name="arch" type="xml">
             
                <xpath 
                    expr="//sheet/group[@name='first']/field[@name='parent_id']" position="after">
                    <field name="recovery_name" string="Name" style="width:50%%" placeholder="31" invisible="1"/>
                    <field name="category_code" string="Categorie Code" style="width:20%%" placeholder="31"/>
                    <field name="is_virtual_product" string="Product Support"/>
                    <field name="code_reference" string="Code Catégorie" style="width:50%%" placeholder="31"/>
                    <!--<field name="code_references" string="Code Catégorie" style="width:50%%" placeholder="relation code" invible/>-->
                 </xpath> 
        </field>
    </record>
</odoo>