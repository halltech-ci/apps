<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_moduls_article" model="ir.actions.act_window">
            <field name="name">Articles</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,form,tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Mon premier projet avec Odoo!
                </p>
            </field>
        </record>

        <record id="product_template_only_form_view" model="ir.ui.view">
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="after">
                    <field name="code_prefix" invisible ="1"/>
                </field>
                <field name="barcode" position="after">
                    <field name="code_referen" string="Reference Code2" invisible ="1"/>
                    <field name="caracteristique" string="Caracteristiques" placeholder="2000X1000"/>
                    <field name="code_ref" string="Reference Code"/>
                    <!--<field name="code_reference3" string="Reference Code3"/>-->
                </field>
            </field>
        </record>
    </data>
</odoo>
