<odoo>
    <record id="res_config_settings_view_form_hta_articles" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <h2>Articles</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="charge" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="charge" invisible="1"/>
                            <div class="text-muted">
                                DÃ©finir le decoupage du codage!
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
        
        <record id="action_product_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_form_hta_articles"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'hta_articles', 'bin_size': False}</field>
    </record>

    <menuitem id="product_config_settings_conterendu"
              name="Configuration"
              parent="stock.menu_product_in_config_stock"
              action="action_product_config_settings"
              sequence="12"/>
</odoo>