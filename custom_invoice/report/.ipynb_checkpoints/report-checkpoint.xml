<odoo>
    <record model="report.paperformat" id="report_invoice_paper">
            <field name="name">Invoice</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">13</field>
            <field name="margin_right">8</field>
            <field name="margin_left">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">50</field>
            <field name="dpi">90</field>
    </record>
    <report id="account_move_hta_report"
        model="account.move"
        string="Facture Conceptor"
        report_type="qweb-pdf"
        name="custom_invoice.report_invoice"
        paperformat='report_invoice_paper'
        file="report_invoice"
    />
</odoo>