<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="view_project_pivot_report" model="ir.ui.view">
        <field name="name">project_pivot_report</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <pivot string="Analyse Projet">
                <field name="name" type="row"/>
                <field name='partner_id'/>
            </pivot>
        </field>
        </record>
        
        <record id="action_project_pivot_view" model="ir.actions.act_window">
            <field name="name">project_pivot_action</field>
            <field name="res_model">project.project</field>
            <field name="view_mode">pivot,graph</field>
            <field name="search_view_id" ref="view_task_project_user_search"/>
            <field name="help">This report allows you to analyse the performance of your projects. you can analyse the quantities of tasks, the hours spent compared to the planned hours and product use.</field>
        </record>
    </data>
<odoo>
