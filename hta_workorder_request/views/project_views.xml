<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    
    <record id="view_project_task_product_request_inherit" model="ir.ui.view">
        <field name="name">product_request_project.task.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <header>
                <button name="button_action_product"
                    string="MANAGE"
                    type="object"
                    class="oe_highlight"
            />
            </header>
            <xpath expr="/form/sheet/notebook" position="inside">
                <page name="product_request" string="Products">
                    <field name="product_lines" />
                </page>
            </xpath>
        </field>
    </record>
</odoo>
