<odoo>
  <data>
    <record id="view_purchase_type_tree" model="ir.ui.view">
        <field name="model">purchase.request.type</field>
        <field name="arch" type="xml">
            <tree string="Purchase Order Types" decoration-muted="active == False">
                <field name="active" invisible="True" />
                <field name="name" />
                <field name='product_category'/>
                <field name="description" />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>
      
    <record id="view_purchase_type_form" model="ir.ui.view">
        <field name="model">purchase.request.type</field>
        <field name="arch" type="xml">
            <form string="Type">
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <field name="active" invisible="1" />
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_category"/>
                        </group>
                        <group>
                            <field name="company_id" readonly='1' groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" nolabel="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
      
    <record model="ir.actions.act_window" id="action_purchase_type_view">
        <field name="name">Purchase Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.request.type</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_purchase_type_tree" />
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Cliquer pour cr√©er un nouveau type de DA.
            </p>
        </field>
    </record>
      
    <menuitem id="menu_purchase_order_type" parent="purchase.menu_purchase_config" sequence="40" action="action_purchase_type_view"/>
  </data>
</odoo>