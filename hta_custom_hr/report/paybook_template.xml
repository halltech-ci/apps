<odoo>
    <record model="report.paperformat" id="paybook_report_paper">
        <field name="name">paybook.report_paper</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">30</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>
    <report id="paybook_report"
        model="paybook.report.wizard"
        string="PayBook Report"
        report_type="qweb-html"
        name="hta_custom_hr.paybook_template"
        paperformat="paybook_report_paper"
        menu="False"
    />
    <template id="paybook_template">
        <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="container">
                            <h3 class='text-center'>LIVRE DE PAYE MENSUEL</h3>
                            <h4 class='text-center'>
                                <span style="font-size: 14px;">PÃ©riode du <t t-esc="date_start"/> au <t t-esc="date_end"/></span>
                            </h4>
                        </div>
                        <div class="container"></div>
                        <table class="table table-sm table-condensed table-bordered">
                            <tr>
                                <td>
                                    <p>TITRE</p>
                                </td>
                                <t t-foreach="employee_ids" t-as='employee'>
                                    <td>
                                        <span t-esc="employee.name"/>
                                    </td>
                                </t>
                            </tr>
                            <t t-foreach='salary_rule' t-as='rule'>
                                <tr>
                                        <td>
                                            <span t-esc='rule.name'/>
                                        </td>
                                        <t t-foreach="employee_ids" t-as='employee'>
                                            <td><span t-esc='lines(date_start, date_end, rule.id, employee.id).amount'/></td>
                                        </t> 
                                    </tr>
                                </t>
                        </table>
                    </div>
                </t>
        </t>
    </template>
</odoo>