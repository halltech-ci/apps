          <xpath expr="//sheet//notebook/page[@name='hr_settings']/group" position="inside">
              <group string="Hiring Informations">
                <group>
                    <field name="matricule" />
                    <field name="ssnid" string="NÂ° CNPS"/>
                </group>
              </group>
              <group string="">
