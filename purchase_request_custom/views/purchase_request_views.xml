<odoo>
  <data>
    <!-- explicit list view definition -->
    <record id="purchase_request_form_inherit" model="ir.ui.view">
        <field name="name">purchase.request.form</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
            <h1 position="after">
                <field name="is_expense" string="Note de frais"/><label for="is_expense"/>
            </h1>
            <xpath expr="//sheet/h1/field[@name='name']" position="attributes">
                <attribute name="attrs">{'readonly': True}</attribute>
            </xpath>
            <xpath expr="//sheet//group/group/field[@name='assigned_to']" position="after">
                <field name="is_for_project" widget='boolean_button' attrs="{'readonly': [('is_editable','=', False)],}" groups="purchase_request_custom.group_purchase_request_type"/>
                <field name='purchase_type' attrs="{'readonly': [('is_editable','=', False)], 'required': True}"/>
                <field name='sale_order' string="Devis" attrs="{'required': [('is_for_project','=', True)], 'invisible': [('is_for_project', '=', False)],}" domain="['|', ('state', 'in', ('done', 'False')), ('has_project', '=', True)]" options="{'no_create': True}"/>
            </xpath>
            <xpath expr="//sheet//group/group[2]/field[@name='group_id']" position="after">
                <field name="project_code"/>
            </xpath>
            <xpath expr="//sheet//group/group[2]/field[@name='description']" position="attributes">
                <attribute name="attrs">{'required':[('purchase_type', '!=', 'project')]}</attribute>
            </xpath>
            <!-- ihnerit purchase request line views-->
            <xpath expr="//sheet/notebook/page/field[@name='line_ids']/form/sheet/group[@name='main']/group/field[@name='product_id']" 
                   position="before">
                <field name="product_code" readonly="True" string="Code"/>
            </xpath>
            <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='product_id']" 
                   position="before">
                <field name="product_code" readonly="True" string="Code"/>
            </xpath>
            
            <!-- ihnerit specification line views-->
            <xpath expr="//sheet/notebook/page/field[@name='line_ids']/form/sheet/group[@name='main']/group/field[@name='name']" position="after">
                <field name="specifications" string="Caractéristiques"/>
            </xpath>
            <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='name']" position="after">
                <field name="specifications" string="Caractéristiques"/>
                <!--<field name="analytic_account_id" string="Analytic"/>-->
            </xpath>
            
            <xpath expr="//notebook/page/field[@name='line_ids']//form/sheet/group[1]/group/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create_edit': True, 'no_create': True}</attribute>
            </xpath>
            
            <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create_edit': True, 'no_create': True}</attribute>
            </xpath>
            
            <field name="picking_type_id" position="attributes">
                <attribute name="attrs">{'required':[('purchase_type', 'not in', ['travaux'])], 'invisible':[('purchase_type', 'in', ['travaux'])]}</attribute>
            </field>
            
            <xpath expr="//notebook/page/field[@name='line_ids']/form/sheet/group[@name='main']/group/field[@name='name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    
    <!--Adding project_id in purchase_order-->
    <record id="purchase_request_list_inherit" model="ir.ui.view">
        <field name="name">purchase.request.form_inherit</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_tree"/>
        <field name="arch" type="xml">
            <field name='origin' position="before">
                <field name="project_code"/>
            </field>
        </field>
    </record>
  </data>
</odoo>