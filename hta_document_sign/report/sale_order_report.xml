<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="inherit_report_saleorder_document_sign" inherit_id="sale.report_saleorder_document">
        <!-- Delete initial position of signature-->
        <!-- -->
        <xpath expr="//p[@t-field='doc.note']" position="after">
            <div class="text-right">
                <strong>
                    <span t-field="doc.user_id"/>
                </strong>
                <div t-if="doc.user_id.sign_signature" class="mt32 ml64 mr4" name="signature">
                    <div class="offset-8">
                        <strong>Signature</strong>
                    </div>
                    <div class="offset-8">
                        <img t-att-src="image_data_uri(doc.user_id.sign_signature)" style="max-height: 4cm; max-width: 8cm;"/>
                    </div>
                </div>
            </div>
        </xpath>
       
    </template>
</odoo>