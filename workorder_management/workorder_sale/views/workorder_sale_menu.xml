<odoo>
  <data>
    <record model="ir.ui.view" id="workorder_sale.tree_view">
      <field name="name">workorder_sale_list</field>
      <field name="model">workorder.sale</field>
      <field name="arch" type="xml">
          <form>
              <header>
              </header>
              <sheet>
                  <div class="oe_button_box" name="button_box"></div>                    
                  <group>
                      <group>
                          <field name="name" required="True"/>
                          <field name="company_id"/>
                      </group>
                      <group>
                          <field name="code" required='True'/>
                          <field name="currency_id" invisible="1"/>
                      </group>
                  </group>
                  <notebook>
                      <page string="Work">
                          <field name='line_ids'>
                              <tree editable="bottom">
                                  <field name="product_uom_category_id" invisible='1'/>
                                  <field name="product_id"/>
                                  <field name='name'/>
                                  <field name="product_template_id" invisible='1'/>
                                  <field name='product_cost'/>
                                  <field name='line_margin'/>
                                  <field name="product_uom_qty"/>
                                  <field name="product_uom" groups="uom.group_uom"/>
                                  <field name='price_unit'/>
                                  <field name="price_subtotal"/>
                              </tree>
                          </field>
                      </page>
                  </notebook>
                 <div>
                     <field name="amount_total"/>
                 </div>
              </sheet>
          </form>
      </field>
    </record>
    
    <record model="ir.ui.view" id="workorder_line_form_view">
        <field name="name">workorder_line_form_view</field>
        <field name="model">workorder.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_id"/>
                <field name="product_template_id" invisible="1"/>
                <field name="price_unit"/>
                <field name="product_uom_qty"/>
                <field name="product_uom"/>
                <field name="price_subtotal"/>
            </tree>
        </field>
    </record>
      
    <record model="ir.actions.act_window" id="workorder_sale.action_window">
      <field name="name">workorder_sale</field>
      <field name="res_model">workorder.sale</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="workorder_sale_menu" name="Workorder Sale" parent="sale.sale_order_menu" groups="sales_team.group_sale_salesman" sequence ='0' action="workorder_sale.action_window"/>
    
    <!-- web_icon="hr_expense,static/description/icon.png -->

  </data>
</odoo>