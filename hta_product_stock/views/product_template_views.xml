<odoo>
  <data>
<record id="product_template_iherit" model="ir.ui.view">
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="after">
                    <field name="code" string="Code" invisible="1"/>
                </field>
                <field name="barcode" position="after">
                    <field name="type_id" string="Product Type"/>
                    <field name="caracteristique" string="Caracteristiques" placeholder="2000X1000"/>
                    <field name="code_reference" string="Reference Code"/>
                    <field name="code_concate" string="Concate Code" invisible="1"/>
                </field>
            </field>
        </record>
      
       <record id="hta_cuctom_product_views_button" model="ir.ui.view">
        <field name="name">product_button_validetor</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <header>
                <button id="button_approuve" name="button_to_approuve" string="Approuve" type="object"
                        class="btn_primary"/>
                <button id="button_config" name="button_to_validate" string="Valider" type="object"
                        class="btn_primary"/>
                <button id="button_concel" name="button_to_cancel" string="Annuler" type="object"/>
                
                <field name="state" widget="statusbar" statusbar_visible="approuve,validate,cancel"/> 
            </header>
            <field name="company_id" position="after">
                <field name='to_approve_allowed' String="To Approuve"/>
            </field>
        </field>
    </record>
      
  </data>
</odoo>