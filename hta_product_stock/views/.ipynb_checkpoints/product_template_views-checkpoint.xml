<odoo>
  <data>
<record id="product_template_iherit" model="ir.ui.view">
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="after">
                    <field name="code" string="Code"/>
                </field>
                <field name="barcode" position="after">
                    <field name="caracteristique" string="Caracteristiques" placeholder="2000X1000"/>
                    <field name="code_reference" string="Reference Code"/>
                    <field name="code_concate" string="Concate Code" invisible="1"/>
                </field>
            </field>
        </record>
  </data>
</odoo>