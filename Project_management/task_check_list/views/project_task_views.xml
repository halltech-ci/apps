<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_task_form2_inherit_form_view">
        <field name="name">project.task.form.view</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <page name="extra_info" position="after">
                <page name="checklist" string="Checklist">
                    <group>
                        <group string="Planned hour">
                            <field name="planned_hours" readonly="True"/>
                        </group>
                        <group string="Completed">
                            <field name="checklist_progress" widget="progressbar"/>
                        </group>
                    </group>
                    <field name="check_list_ids">
                        <tree editable="bottom" string="Check List">
                            <field name="task_id" invisible="1"/>
                            <field name="check_box" widget="checkbox"/>
                            <field name="date"/>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="unit_time" widget="timesheet_uom" sum="Spent Hours"/>
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>
    
    <record model="ir.ui.view" id="timesheet_task_form_view_inherit">
        <field name="name">timesheet_task_form_view</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@id='timesheets_tab']/field[@name='timesheet_ids']/tree/field[@name='date']" position="before">
                <field name="is_done" widget="checkbox"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_task_tree2_inherit_tree_view">
        <field name="name">project.task.tree.view</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <field name="stage_id" position="before">
                <field name="checklist_progress" widget="progressbar"/>
            </field>
            <field name="remaining_hours" position="after">
                <field name="total_hours_spent"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_task_kanban_inherit">
        <field name="name">project.task</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//templates" position="before">
                <field name="checklist_progress"/>
                <field name="max_rate"/>
            </xpath>
            <xpath expr="//field[@name='project_id']" position="after">
                <li>
                    <field name="checklist_progress" widget="gauge"
                           options="{'max_field': 'max_rate',  'style': 'width:160px; height: 120px;'}">
                    </field>
                </li>
            </xpath>
        </field>
    </record>

</odoo>