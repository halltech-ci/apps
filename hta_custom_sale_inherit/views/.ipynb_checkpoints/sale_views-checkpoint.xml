<odoo>
  <data>
    <record model="ir.ui.view" id="sale_view_inherit">
        <field name="name">sale.inherit.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Insert sale order object-->
          <!--xpath expr="//sheet/group" position="after"-->
            <field name="sale_order_recipient" position="replace">
                  <field name="sale_order_recipients"/>
          <!--/xpath-->
            </field>
            <field name="payment_term_id" position="replace">
                <field name="payment_term_ids" Strong='Conditions de paiement' required="True"/>
          <!--/xpath-->
            </field>
        </field>
    </record>
  </data>
</odoo>