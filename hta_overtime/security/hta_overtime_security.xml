<odoo>
    <record model="ir.module.category" id="base.module_category_human_resources_overtimes">
        <field name="description">Helps you manage your overtimes.</field>
        <field name="sequence">16</field>
    </record>
    
    <record id="group_hr_overtime_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="base.module_category_human_resources_overtimes"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <record id="group_hr_overtime_responsible" model="res.groups">
        <field name="name">Responsible</field>
        <field name="category_id" ref="base.module_category_human_resources_overtimes"/>
        <field name="implied_ids" eval="[(4, ref('hta_overtime.group_hr_overtime_user'))]"/>
    </record>
    
    <record id="group_hr_overtime_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="implied_ids" eval="[(4, ref('hta_overtime.group_hr_overtime_responsible'))]"/>
        <field name="category_id" ref="base.module_category_human_resources_overtimes"/>
    </record>
</odoo>