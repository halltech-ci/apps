<odoo>
    <record id="paperformat_amortization_report" model="report.paperformat">
            <field name="name">Cash</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="page_height">210</field>
            <field name="page_width">300</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">4</field>
            <field name="margin_bottom">9</field>
            <field name="margin_right">3</field>
            <field name="margin_left">3</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">3</field>
            <field name="dpi">90</field>
    </record>
    <report id="account_amortization_report"
        model="account.amortization.report.wizard"
        string="Account Amortization Report"
        report_type="qweb-html"
        paperformat='paperformat_amortization_report'
        name="hta_account_amortization.amortization_report_view"
        
        menu="False"/>
    
    <report id="account_amortization_generate_xlsx_report"
        model="account.amortization.report.wizard"
        string="Account Amortization Report"
        report_type="xlsx"
        name="hta_account_amortization.asset_xlsx_generate"
        file="hta_account_amortization.asset_xlsx_generate"
        attachment_use="False"
        
        />

    <template id="amortization_report_view">
        <t t-call="web.html_container">
                <div class="article mt0 o_report_layout_standard">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm" style="display: block;text-align:center;">
                                <h5 class="text-center">
                                    TABLEAU D'AMORTISSEMENTS ET INVENTAIRE DES IMMOBILISATIONS 						
                                </h5>
                                <h5 class="text-center">
                                EXERCICE CLOS <span style="font-size: 14px;"><strong>AU</strong> <t t-esc="date_end"/></span>
                                </h5>       
                            </div>
                        </div>
                    </div>
                    <table class="table table-sm table-condensed table-bordered" >
                        <thead class="thead-dark">
                            <tr class="table-primary">
                                <th class='text-center' rowspan="2" colspan="3">DESIGNATION</th>
                                <th class='text-center' rowspan="2">TAUX</th>
                                <th class='text-center' rowspan="2">DATE ACQUISITION</th>
                                <th class='text-center' rowspan="2">VALEUR D'ACQUISITION</th>
                                <th class='text-center' colspan="3">AMORTISSEMENT</th>
                                <th class='text-center' rowspan="2">VALEUR RESIDUELLE</th>
                            </tr>
                            <tr class="table-primary">
                                <th class='text-center'>ANTERIEUR</th>
                                <th class='text-center'>EXERCICE</th>
                                <th class='text-center'>TOTAL</th>
                            </tr>
                        </thead>
                    </table>    
                    <table class="table table-sm table-condensed table-bordered" >
                        <t t-foreach="docs" t-as="doc">
                            <tr class="table-primary">
                                <th class='text-center' colspan="3">
                                    <span t-esc="doc['name']"/>
                                </th>
                                <th class='text-center'></th>
                                <th class='text-center'></th>
                                <th class='text-center'></th>
                                <th class='text-center'></th>
                                <th class='text-center'></th>
                                <th class='text-center'></th>
                                <th class='text-center'></th>
                            <t t-foreach="doc['get_lines']" t-as="lines">
                                    <tr>
                                        <th class='text-center' colspan="3">
                                            <span t-esc="lines.get('designation')"/> 
                                        </th>
                                        <td ></td>
                                        <td>
                                            <span t-esc="lines.get('date_acquisition').strftime('%d/%m/%Y')" /> 
                                        </td>
                                        <td class='text-center'>
                                            <span t-esc="lines.get('valeur_acquisition')" options='{"widget": "float", "precision": 0}'/> 
                                        </td>
                                        <td class='text-center'>
                                            <span t-esc="lines.get('anterieur')" options='{"widget": "float", "precision": 0}'/> 
                                        </td>
                                        <td class='text-center'>
                                            <span t-esc="lines.get('exercice')" t-options='{"widget": "float", "precision": 0}'/>
                                        </td>
                                        <td class='text-center'>
                                            <span t-esc="lines.get('total')" t-options='{"widget": "float", "precision": 0}'/>
                                        </td>
                                        <td class='text-center'>
                                            <span t-esc="lines.get('valeur_residuelle')" t-options='{"widget": "float", "precision": 0}'/>
                                        </td>
                                    </tr>
                                </t>
                            </tr>
                            </t>  
                    </table>
                    <br/>
            </div> 
            <div class="footer o_standard_footer" style="border-top: 1px solid black;">
                <div class="row text-center">
                    <div class="col col-12 text-center">
                        <ul class="list-inline">
                            <li class="list-inline-item">Page:</li>
                            <li class="list-inline-item">
                                <span class="page"/>
                            </li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item">
                                <span class="topage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>