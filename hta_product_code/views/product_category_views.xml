<odoo>
  <data>
    <record id="product_category_form_view_inherit" model="ir.ui.view">
        <field name="name">prodcut.category.form.view</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group[@name='first']/field[@name='parent_id']" position="after">
                <field name="category_code" class="oe_inline"/>
                <field name="related_code" class="oe_inline"/>
                <field name="reference_mask" class="oe_inline"/>
                <notebook>
                    <page>
                        <field name="attribute_lines" widget="one2many">
                            <tree string="Attributes" editable="bottom">
                                <field name="name"/>
                                <field name="code_type"/>
                                <field name="code_length"/>
                                <field name="is_automatic_code"/>
                                <field name="code_compute_parameter"/>
                                <field name="value_ids" widget="many2many_tags" options="{'no_create_edit': True}" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_category_search_view_inherit">
        <field name="name">product.category.search (product_category_code)</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_search_view" />
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="category_code" />
                <field name="related_code" />
            </field>
        </field>
    </record>

    <record id="product_category_list_view_inherit" model="ir.ui.view">
        <field name="name">product.category.list (product_category_code)</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_list_view" />
        <field name="arch" type="xml">
          <field name="display_name" position="after">
            <field name="category_code" />
            <field name="related_code" />
          </field>
        </field>
      </record>
  </data>
</odoo>