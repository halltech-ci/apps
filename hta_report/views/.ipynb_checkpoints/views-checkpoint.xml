<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="report_list_view">
            <field name="name">report list</field>
            <field name="model">hta_custom_report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="report_reference"/>
                    <field name="title"/>
                    <field name="utilisateur"/>
                    <field name="societe"/>
                    <field name="responsable"/>
                    <field name="date_saisir"/>
                </tree>
            </field>
    </record>
    <record model="ir.ui.view" id="report_form_view">
            <field name="name">report from</field>
            <field name="model">hta_custom_report</field>
            <field name="arch" type="xml">
                <form>
                   <header>
                        <button name="action_send_mail" type="object" string="Envoie de mail" class="oe_highlight"/>
                        <field name="commande" string="Joindre un fichier"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="report_reference" readonly="1" invisible="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="title" string="Titre"/>
                            <field name="utilisateur" string="Utilisateur"/>
                            <field name="societe" string="Société"/>
                        </group>
                        <group>
                            <field name="responsable" string="Résponsable"/>
                            <field name="objet" string="Objet"/>
                            <field name="date_saisir" string="Date"/>
                        </group>
                        <notebook>
                            <page>
                                <separator string="Note"/>
                                <field name="note" string="Note"/>
                                <separator string="Reste"/>
                                <field name="reste_gerer" string="Reste à Gerer"/>
                                <separator string="Contraintes"/>
                                <field name="bloquante" string="Les élémentrs Bloquants"/>
                                <separator string="Date et Heure"/>
                                <field name="date_now" string="La Date et Heure"/>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>

                </form>
            </field>
        </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="hta_report.action_window">
      <field name="name">hta_report window</field>
      <field name="res_model">hta_custom_report</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
<!--
    <record model="ir.actions.server" id="hta_report.action_server">
      <field name="name">hta_report server</field>
      <field name="model_id" ref="model_hta_report_hta_report"/>
