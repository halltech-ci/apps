      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="Rapport" id="hta_report.menu_root"/>

    <!-- menu categories -->

    <!--menuitem name="Menu 1" id="hta_report.menu_1" parent="hta_report.menu_root"/>
      
    <menuitem name="Menu 2" id="hta_report.menu_2" parent="hta_report.menu_root"/-->

    <!-- actions -->

    <menuitem name="Rapport" id="hta_report.menu" parent="hta_report.menu_root"
              action="hta_report.action_window"/>
      
    <!--menuitem name="Server to list" id="hta_report" parent="hta_report.menu_2"
              action="hta_report.action_server"/-->

  </data>
</odoo>