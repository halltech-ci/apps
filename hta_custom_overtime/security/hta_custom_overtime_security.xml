<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="base.module_category_human_resources_overtime">
        <field name="description">Helps you manage your overtime.</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_hr_overtime_responsible" model="res.groups">
        <field name="name">Responsible</field>
        <field name="category_id" ref="base.module_category_human_resources_overtime"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_hr_overtime_user" model="res.groups">
        <field name="name">All Approver</field>
        <field name="category_id" ref="base.module_category_human_resources_overtime"/>
        <field name="implied_ids" eval="[(4, ref('hta_custom_overtime.group_hr_overtime_responsible'))]"/>
    </record>

    <record id="group_hr_overtime_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="base.module_category_human_resources_overtime"/>
        <field name="implied_ids" eval="[(4, ref('hta_custom_overtime.group_hr_overtime_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('hta_custom_overtime.group_hr_overtime_manager'))]"/>
    </record>

</odoo>
