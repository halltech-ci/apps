<odoo>
    <record id="tva_report_wizard" model="ir.ui.view" >
        <field name="name">Etat Tva Report</field>
        <field name="model">etat.tva.report.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Tva Report">
                <group>
                    <group>
                        <field name="partner"/>
                    </group>
                    <group>
                        <field name="date_start"/>
                    </group>
                    <group>
                        <field name="date_end"/>
                    </group>
                </group>
                <footer>
                    <button name="get_report" string="Get Report" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window 
        id="action_etat_tva_report_wizard"
        name="Etat Tva Report"
        res_model="etat.tva.report.wizard"
        view_mode="form"
        target="new"
        />

    <menuitem 
        id="menu_etat_tva_report_wizard"
        action="action_etat_tva_report_wizard"
        name = "Rapport Etat Tva"
        sequence="15"
        parent="account.account_reports_management_menu"
        />
</odoo>