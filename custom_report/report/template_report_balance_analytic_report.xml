<odoo>
    <report id="balance_analytic_report"
        model="balance.analytic.report.wizard"
        string="Balance Analytic Report"
        report_type="qweb-html"
        name="custom_report.balance_report_view"
        
        menu="False"/>


    <template id="balance_report_view">
        <t t-call="web.html_container">
            <div class="header" style="border-bottom: 1px solid black;">
                <h3 class="text-center">Balance Analytic
                    <span style="font-size: 14px;"><strong>From</strong>: <t t-esc="date_start"/> <strong>To</strong>: <t t-esc="date_end"/></span>
                </h3>
            </div>
            <div class="article mt0 o_report_layout_standard">
                <table class="table table-condensed table-bordered">
                    <thead>
                        <tr>
                            <th class='text-center'>Numero Compte</th>
                            <th class='text-center'>Libelle Compte</th>
                            <th class='text-center'>Code Projet</th>
                            <th class='text-center'>Description</th>
                            <th class='text-center'>Section Analytic</th>
                            <th class='text-center'>M. Debit</th>
                            <th class='text-center'>M. Credit</th>
                            <th class='text-center'>S. Debit</th>
                            <th class='text-center'>S. Credit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="line"> 
                                <t t-set="balance" t-value="line['get_lines']"/>
                                    <t t-if="balance"> 
                                        <t t-foreach="balance" t-as="lines"> 
                                            <tr class='text-center'>
                                                <th> <span t-esc="lines.get('code_account')" t-options='{"widget": "float", "precision": 0}'/> </th>
                                                <th><span t-esc="lines.get('name_account')" t-options='{"widget": "float", "precision": 0}'/></th>
                                                <th>
                                                    <span t-esc="lines.get('code_project')" t-options='{"widget": "float", "precision": 0}'/> 
                                                </th>
                                                <th><span t-esc="lines.get('name_project')" t-options='{"widget": "float", "precision": 0}'/></th>
                                                <th><span t-esc="lines.get('name_analytic')" t-options='{"widget": "float", "precision": 0}'/></th>
                                                <th><span t-esc="lines.get('x_debit')" t-options='{"widget": "float", "precision": 0}'/></th>
                                                <th><span t-esc="lines.get('x_credit')" t-options='{"widget": "float", "precision": 0}'/></th>
                                                <t t-if="lines.get('solde_debit')>0">
                                                    <th><span t-esc="lines.get('solde_debit')" t-options='{"widget": "float", "precision": 0}'/></th>
                                                    <th></th>
                                                </t>
                                                <t t-if="lines.get('solde_credit')>0">
                                                    <th></th>
                                                    <th><span t-esc="lines.get('solde_credit')" t-options='{"widget": "float", "precision": 0}'/></th>
                                                </t>
                                            </tr>
                                        </t>
                                </t> 
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="footer o_standard_footer" style="border-top: 1px solid black;">
                <div class="row text-center">
                    <div class="col col-12 text-center">
                        <ul class="list-inline">
                            <li class="list-inline-item">Page:</li>
                            <li class="list-inline-item">
                                <span class="page"/>
                            </li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item">
                                <span class="topage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>