<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <template id="inherit_account_invoice_report_document" inherit_id="account.report_invoice_document">
      <!-- Insert BL number on sale invoice-->
       <xpath expr="//div[hasclass('page')]/div[hasclass('row', 'mt32', 'mb32')]" position="after">
           <div>
             <strong>Objet :</strong>
             <span t-field ="o.invoice_object"/>
           </div>
           <div class="row">
             <p></p>
           </div>
           <div class="row">
             <p></p>
           </div>
        </xpath>        
        <xpath expr="//div[hasclass('page')]//div[hasclass('row', 'mt32', 'mb32')]" position="replace">
         <div class="row">
           <div class="col-xs-6" t-if="o.date_invoice">
              <strong>Date de Facture:</strong>
              <span t-field="o.date_invoice"/>
           </div>
        </div>
        <div class="row">
            <p></p>
        </div>
        <div class="row">
           <p></p>
        </div>
        <div class="row">
           <div class="col-xs-4" t-if="o.origin">
             <strong>Ref. Devis:</strong>
             <p t-field="o.origin"/>
           </div>
            <div class="col-xs-4" t-if="o.delivery_document">
               <strong>NÂ° Bordereau de Livraison :</strong>
              <p t-field="o.delivery_document"/>
            </div>
            <div class="col-xs-4" t-if="o.customer_reference">
               <strong>Ref. Commande Client :</strong>
              <p t-field="o.customer_reference"/>
            </div>
         </div>
        </xpath>
        <xpath expr="//div[hasclass('page')]/h2" position='replace'>
            <h2>
                <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')"></span>
                <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                <span t-if="o.type == 'out_refund'">Credit Note</span>
                <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
                <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                <!-- <span t-field="o.number"/> -->
            </h2>
        </xpath>
        <xpath expr="//div[hasclass('page')]/p[@t-if='o.payment_term_id']" position='replace'>
            <span></span>
        </xpath>
        <xpath expr="//div[hasclass('page')]/p[@t-if='o.fiscal_position_id.note']" position="after">
            <div class="row text-right">
                <strong> LA COMPTABILITE </strong>
            </div>
        </xpath>
    </template>
  </data>
</odoo>