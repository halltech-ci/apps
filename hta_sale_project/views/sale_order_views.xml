<odoo>
  <data>
    <record id="view_order_form_project" model="ir.ui.view">
        <field name="name">sale.order.project.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="hta_sale_approval.view_order_form_extends"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="create_project_sale_confirm" 
                         
                        type="object" 
                        class="oe_highlight"
                        string="Create Project"
                        attrs="{'invisible': ['|', ('has_project', '=', True), ('state', 'not in', ('sale'))]}"
                />
            </xpath>

            <xpath expr="//sheet/group/group/field[@name='payment_term_id']" position="after">
                <field name="create_project" widget="radio" options="{'horizontal': true}" attrs="{'invisible': ['|', ('state', 'not in', ('sale')), ('has_project', '=', True)]}"/>
                <field name='project_template' options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible': [('create_project', 'in', ('add_to_project'))]}"/>
                <field name="has_project" invisible='1'/>
                <field name="project_id" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible': ['|',('create_project', '=', 'create_project'), ('state', 'not in', ('sale'))], 'required':[('create_project', 'in', ['add_to_project']), ('state', 'in', ('sale'))], 'readonly': [('has_project', '=', True)]}"/>
                <field name='analytic_group' options="{'no_create': True, 'no_create_edit':True}"/>
            </xpath>
            <xpath expr="//sheet/group" position="after">
                <group>
                    <field name='project_description' string="Description Projet :" attrs="{'invisible': [('state', 'not in', ('sale'))], 'required': [('create_project', 'in', ['create_project']), ('state', 'in', ('sale'))]}"/>
                </group>
            </xpath>
        </field>
      </record>
  </data>
</odoo>